<UserControl
    x:Class="string_matching_algorithm.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:string_matching_algorithm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fffd"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="75"
            FontWeight="Bold">
            About Me
        </TextBlock>
        <RichTextBox
            Padding="20"
            Height="auto"
            Focusable="False"
            FontSize="30"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Hidden">
            <FlowDocument>
                <Paragraph>Nhà sáng lập</Paragraph>
                <Paragraph>Nguyễn Trung Kiên - 23520802</Paragraph>
                <Paragraph>Hồ Nguyễn Tài Lợi - 23520869</Paragraph>
                <Paragraph>Đội ngũ phát triển phần mềm tinh nhuệ của quốc gia</Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBlock FontSize="30" Padding="20">
            Xem chi tiết ứng dụng và chúng tôi tại <Hyperlink NavigateUri="https://github.com/kine1606/String-Matching" RequestNavigate="Hyperlink_RequestNavigate">Github</Hyperlink></TextBlock>
        <Button
            Margin="0 150 0 0"
            Width="200"
            Height="auto"
            Background="PaleVioletRed"
            Command="{Binding NavigateHomeCommand}"
            Content="Back"
            FontSize="50" />
    </StackPanel>
</UserControl>
