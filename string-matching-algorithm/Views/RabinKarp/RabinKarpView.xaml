<UserControl
    x:Class="string_matching_algorithm.Views.RabinKarpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:string_matching_algorithm.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#ffff"
    mc:Ignorable="d">
    <Grid>
        <!--<TextBlock Text="{Binding NameTemp}" />
        <Button Command="{Binding NavigateAlgorithmCommand}"
                Content="Back" />


        <Button Command="{Binding Click1Command}"
                Content="test command" />

        <Button Content="test trigger">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:InvokeCommandAction Command="{Binding Click2Command}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="91*" />
            <RowDefinition Height="359*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="167*" />
                <ColumnDefinition Width="83*" />
                <ColumnDefinition Width="550*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="41"
                Height="27"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                Text="KMP" />
            <StackPanel Grid.Column="1">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="25"
                    Text="Text" />
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="25"
                    Text="Pattern" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBox
                    x:Name="textStringtxtBox"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="25"
                    Text="{Binding TextString}" />
                <TextBox
                    x:Name="patternStringtxtBox"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="25"
                    Text="{Binding PatternString}" />

            </StackPanel>

        </Grid>
        <StackPanel Grid.Row="1">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{Binding TextString}"
                FontSize="20" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{Binding PatternString}"
                FontSize="20" />
            <Button Command="{Binding SearchCommand}" Content="Search" />
            <Button Command="{Binding StartCommand}" Content="Start" />
            <Button Command="{Binding StepOverCommand}" Content="Step" />
            <Button Command="{Binding RefreshCommand}" Content="Refresh" />
            <Button Command="{Binding ResultCommand}" Content="Result" />
        </StackPanel>
    </Grid>
</UserControl>
